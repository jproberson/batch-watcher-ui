# Batch Job Status Widget Configuration
# Copy this file to .env and edit the values below

# Directory to the directories that monitor batch job files
WATCH_DIR=/path/to/your/batch/directories

# Server health check URL
HEALTH_URL=https://your-server.com/health

# How often to check server health (in seconds)
CHECK_INTERVAL=5

# Auto-start when Hammerspoon loads (true/false)
AUTO_START=true

# Hide widget when server is down (true/false)
HIDE_WHEN_DOWN=true

# Debug mode - shows more detailed logging (true/false)  
DEBUG=false

# Widget dimensions (smaller width works well with compact W/A/D format)
WIDGET_WIDTH=180
WIDGET_HEIGHT=30

# Queue directory patterns (comma-separated)
QUEUE_PATTERNS=batch,sandbox

# Deadletter directory pattern
DEADLETTER_PATTERN=deadletter

# Show confirmation dialogs when deleting files (true/false)
CONFIRM_DELETES=false
